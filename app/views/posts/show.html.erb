<% content_for :page_title, @post.title %>

<div class="section">
  <div class="container">
    <nav class="level">
      <div class="level-left">
        <p class="level-item">
          <strong>Actions</strong>
        </p>
      </div>
      <div class="level-right">
        <p class="level-item">
          <%= link_to 'Edit', edit_post_path(@post), class: 'button is-link' %>
        </p>
        <p class="level-item">
          <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure" }, class: 'button is-danger' %>
        </p>
      </div>
    </nav>
    <hr>
    <div class="content">
      <h1 class="title">
        <%= @post.title %>
      </h1>
      <%= @post.content %>
    </div>
  </div>
</div>